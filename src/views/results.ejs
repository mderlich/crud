<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Resultados de tu búsqueda: ' + productDetail.length }) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- todos los productos -->
	<div class="container products-wrapper">
		<div class="row">

			<div class="col-12">
				<h2 class="products-title">Resultados de la búsqueda: <%= productDetail.length %></h2>
			</div>

				<% if (productDetail.length > 0) { %>
				<!-- con resultados -->
				<% for(let i=0; i < productDetail.length ; i++) { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/products/<%= productDetail[i].id %>">
								<figure class="product-box_image">
									<img src="/images/products/<%= productDetail[i].image %>" alt="imagen de producto">
								</figure>
								<article class="product-box_data">
									<h2><%= "$" + productDetail[i].price.toLocaleString('es-AR') %></h2>
									<% if (productDetail[i].discount > 0) { %>
										<span><%= productDetail[i].discount %> %OFF</span>
									<% } %>
									<p><%= productDetail[i].name %></p>
									<i class="fas fa-truck"></i>
								</article>
							</a>
						</section>
					</div>
					<% } %>
				<!-- /con resultados -->
				<% } else { %>
				<!-- sin resultados -->
				<div class="col-12">
					<h2 class="products-title" style="color: tomato;">No hay productos que coincidan con esa búsqueda</h2>
				</div>
				<!-- /sin resultados -->
				<% } %>




		</div>
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>