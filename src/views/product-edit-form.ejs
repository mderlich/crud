<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Editando: ' + productDetail.name }) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Estás editando: <i><%= productDetail.name %></i></h2>
			</div>
		</div>
		<div class="col-12">

			<!-- IMPORTANTE!!! debe incluir... ?_method=PUT -->
			<form action="/products/<%= productDetail.id %>/?_method=PUT" method="POST">

				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" placeholder="Ej: Zapatillas Reebok" class="form-input" value="<%= productDetail.name %>">
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" placeholder="Ej: 5678" class="form-input" value="<%= productDetail.price %>">
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input type="number" id="discount" name="discount" placeholder="Ej: 15" class="form-input" value="<%= productDetail.discount %>" min="0" max="100">
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">
							
							<% 
							let inSaleSelected;
							let visitedSelected;

							if (productDetail.category == "in-sale") { 
							   inSaleSelected = 'selected';
							   visitedSelected = '';
							} else {
							   inSaleSelected = '';
							   visitedSelected = 'selected';
							}
							%>
							<option value="">Elegí</option>
							<option value="in-sale" <%= inSaleSelected %>>En oferta</option>
							<option value="visited" <%= visitedSelected %>>Últimos agregados</option>
						</select>
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description" class="form-input"><%= productDetail.description %></textarea>
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>